{
	"name": "pixelto",
	"private": true,
	"scripts": {
		"build": "dotenv -c -- turbo build",
		"dev": "dotenv -c -- turbo dev --concurrency 15",
		"start": "dotenv -c -- turbo start",
		"lint": "biome lint . ",
		"check": "biome check",
		"clean": "turbo clean",
		"format": "biome format . --write",
		"docker:build": "docker build -t mobikok-registry.us-east-1.cr.aliyuncs.com/kk_hiveapp/pixelto:latest .",
		"docker:buildx": "docker buildx build --platform linux/amd64 -t mobikok-registry.us-east-1.cr.aliyuncs.com/kk_hiveapp/pixelto:latest --load .",
		"docker:push": "docker push mobikok-registry.us-east-1.cr.aliyuncs.com/kk_hiveapp/pixelto:latest",
		"docker:run": "docker run --rm -p 3000:3000 --env-file .env.local mobikok-registry.us-east-1.cr.aliyuncs.com/kk_hiveapp/pixelto:latest",
		"docker:compose:up": "docker compose up -d",
		"docker:compose:down": "docker compose down",
		"db:migrate:deploy": "pnpm --filter @repo/database migrate:deploy",
		"db:migrate:status": "pnpm --filter @repo/database migrate:status"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "^24.3.0",
		"dotenv-cli": "^10.0.0",
		"turbo": "^2.5.6",
		"typescript": "5.9.2"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "19.0.0",
			"@types/react-dom": "19.0.0"
		}
	}
}
